# Como están conectados los químicos basado en los productos en los que están presentes
# Dejando fuera 'titanium dioxide' y 'trade secret'
MATCH u= (chem1:Chemical)-[:Chem_SIMILAR]-(chem2:Chemical)
WHERE chem1.ChemicalName <> 'titanium dioxide' and chem2.ChemicalName <> 'titanium dioxide' and
      chem1.ChemicalName <> 'trade secret' and chem2.ChemicalName <> 'trade secret'
RETURN u 

# Revisión de betweeness entre químicos
CALL gds.betweenness.stream('chemical-graph_no_cat')
YIELD nodeId, score
RETURN gds.util.asNode(nodeId).ChemicalName as Name, score AS chems_similares
ORDER BY chems_similares DESC

# Revisión de similitud y comunidades de productos

MATCH (prod1:Product)-[p_chem:hasChemical]-(chem:Chemical)
RETURN gds.graph.project( 'prod_similarity', prod1,chem, { relationshipProperties: p_chem { .weight } },{ undirectedRelationshipTypes: ['*'] })

CALL gds.leiden.stream('prod_similarity', { randomSeed: 19 })
YIELD nodeId, communityId
RETURN gds.util.asNode(nodeId).ProductName AS ProdName, communityId
ORDER BY ProdName ASC

# Se agrega la comunidad a las propiedades del producto
CALL gds.leiden.write('prod_similarity', { writeProperty: 'communityId', randomSeed: 19 })
YIELD communityCount, nodePropertiesWritten



